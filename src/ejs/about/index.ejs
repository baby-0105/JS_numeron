<% var title = "Mina-birthday letter-page"; var description = "Mina-birthday letter-page"; %> <%
include src/ejs/template/_head %>
<% var image_path = '/assets/images/' %>

<main class = "l-about">
  <div class = "p-about-title">
    <h1 class = "p-about-title-text">みなへ</h1>
  </div>

  <div class = "p-about-feature-img">
    <img src = "<%= image_path %>letter_main_mina.png" class = "p-about-feature-img__woman">
    <img src = "<%= image_path %>letter_main_baba.png" class = "p-about-feature-img__man">
  </div>

  <div class = "p-about-letter">
    <div class = "p-about-stickyContainer">
      <div class = "p-about-bgSticky p-about-bgSticky1"></div>
      <section class = "block1">
        <div class = "p-about-letter__section p-about-letter__section01">
          <div class = "p-about-letter__pic p-about-letter__pic01"></div>
          <p class = "p-about-letter__word p-about-letter__word--left">２２歳！　誕生日おめでとう！</p>
        </div>
        <div class = "p-about-letter__section p-about-letter__section02">
          <div class = "p-about-letter__pic p-about-letter__pic02"></div>
          <p class = "p-about-letter__word p-about-letter__word--left">まず初めに言っておきたい事</p>
        </div>
        <div class = "p-about-letter__section p-about-letter__section03">
          <div class = "p-about-letter__pic p-about-letter__pic03"></div>
          <p class = "p-about-letter__word p-about-letter__word--left">『みなの事が大好き』です</p>
        </div>
      </section>


      <div class = "p-about-letter__bgwhite">
        <div class = "p-about-letter__bgsection">
          <p class = "p-about-letter__bgword c-watch-anim">５年前</p>
        </div>
      </div>
    </div>

    <div class = "p-about-stickyContainer">
      <div class = "p-about-bgSticky p-about-bgSticky2"></div>
      <section class = "block2">
        <div class = "p-about-letter__section p-about-letter__section--reverse p-about-letter__section04">
          <div class = "p-about-letter__pic p-about-letter__pic--right p-about-letter__pic04"></div>
          <p class = "p-about-letter__word p-about-letter__word--right">みなとかごの屋で出会ってから５年</p>
        </div>
